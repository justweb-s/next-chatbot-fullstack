generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chat {
  id              String    @id @default(uuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  messages        Message[]
  modelProvider   String    @default("openai") // openai, anthropic, etc.
  modelName       String    @default("gpt-3.5-turbo") // specific model name
  systemPrompt    String?   @db.Text // custom system prompt
  temperature     Float     @default(0.7)
  maxTokens       Int       @default(1000)
  apiKey         String?   @db.Text // encrypted API key
}

model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text
  isUser    Boolean
  createdAt DateTime @default(now())
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  chatId    String
  role      String   @default("user") // system, user, assistant
  imageUrl  String?  @db.Text // for DALL-E generated images
}
